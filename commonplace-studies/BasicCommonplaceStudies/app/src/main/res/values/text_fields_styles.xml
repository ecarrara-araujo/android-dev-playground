<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App.TextFieldSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle2" />

    <style name="TextAppearance.App.TextFiledCaption" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="ShapeAppearance.App.SmallComponent.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent.Cut" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.Filled" parent="">
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="colorOnSurface">@color/teal_700</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.TextFieldSubtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.TextFiledCaption</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="editTextStyle">
            @style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense
        </item>
    </style>

    <style name="Widget.App.TextInputLayout.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout.Filled</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent.Rounded</item>
        <item name="hintTextColor">@color/purple_500</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.Outlined" parent="">
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="colorOnSurface">@color/teal_700</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.TextFieldSubtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.TextFiledCaption</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="editTextStyle">
            @style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>

    <style name="Widget.App.TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout.Outlined</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent.Cut</item>
        <item name="hintTextColor">@color/purple_500</item>
    </style>
</resources>
