<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.Button.Borderless.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.Button.Favorite" parent="Widget.App.Button.Borderless.IconOnly">
        <item name="android:checkable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="theme">@style/ThemeOverlay.ColorControlHighlight.ColorPrimary</item>
        <item name="icon">@drawable/selector_favorite_24dp</item>
    </style>
</resources>
