<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sliders.SlidersExperimentsActivity">

    <TextView
        android:id="@+id/materialSectionTitleContinuousTextView"
        style="?attr/textAppearanceHeadline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/sliders_experiments_material_continous_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/simpleContinuousSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialSectionTitleContinuousTextView" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/simpleContinuousRangeSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simpleContinuousSlider"
        app:values="@array/range_slider_initial_values" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/styledContinuousRangeSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simpleContinuousRangeSlider"
        app:thumbColor="@color/yellow"
        app:thumbElevation="4dp"
        app:thumbRadius="16dp"
        app:tickColor="@color/teal_200"
        app:trackColor="@color/red"
        app:trackHeight="16dp"
        app:values="@array/range_slider_initial_values" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/materialSectionTitleDiscreteTextView"
        style="?attr/textAppearanceHeadline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/sliders_experiments_material_discrete_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centerGuideline" />

    <com.google.android.material.slider.Slider
        android:id="@+id/simpleDiscreteSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:stepSize="10.0"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialSectionTitleDiscreteTextView" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/simpleDiscreteRangeSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:stepSize="10.0"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simpleDiscreteSlider"
        app:values="@array/range_slider_initial_values" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/styledDiscreteRangeSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:stepSize="10.0"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simpleDiscreteRangeSlider"
        app:thumbColor="@color/yellow"
        app:thumbElevation="4dp"
        app:thumbRadius="16dp"
        app:tickColor="@color/teal_200"
        app:trackColor="@color/red"
        app:trackHeight="16dp"
        app:values="@array/range_slider_initial_values" />

</androidx.constraintlayout.widget.ConstraintLayout>
